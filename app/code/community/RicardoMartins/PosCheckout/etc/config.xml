<?xml version="1.0"?>
<config>
  <modules>
    <RicardoMartins_PosCheckout>
      <version>0.1.0</version>
    </RicardoMartins_PosCheckout>
  </modules>
  <global>
    <helpers>
      <poscheckout>
        <class>RicardoMartins_PosCheckout_Helper</class>
      </poscheckout>
    </helpers>
	<blocks>
	  <poscheckout>
		<class>RicardoMartins_PosCheckout_Block</class>
	  </poscheckout>
	</blocks>
  </global>
  <admin>
	<routers>
	  <poscheckout>
	    <use>admin</use>
		<args>
		  <module>RicardoMartins_PosCheckout</module>
		  <frontName>poscheckout</frontName>
		</args>
	  </poscheckout>
	</routers>
  </admin>
  <adminhtml>
	<menu>
		<sales>
			<children>
			  	<poscheckout module="poscheckout">
					<sort_order>100</sort_order>	
					<title>POS Fast Checkout</title>
					<action>poscheckout/adminhtml_poscheckoutbackend</action>
				</poscheckout>
			</children>
	</sales>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<poscheckout translate="title" module="poscheckout">
			  <title>PosCheckout</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <poscheckoutbackend translate="title">
			<title>POS Fast Checkout</title>
		  </poscheckoutbackend>
			  </children>
			</poscheckout>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<poscheckout>
		  <file>poscheckout.xml</file>
		</poscheckout>
	  </updates>
	</layout>
  </adminhtml>
</config> 